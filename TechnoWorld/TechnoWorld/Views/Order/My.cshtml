@model IEnumerable<TechnoWorld.Models.Order.OrderListingViewModel>

@{
    ViewData["Title"] = "Index";
}
@*https://bootstrapious.com/p/bootstrap-shopping-cart*@

<h1>All Orders</h1>
<body>
    <div class="pb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">


                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="p-2 px-3 text-uppercase">Product</div>
                                    </th>
                                    <th scope="col" class="border-0 bg-light">
                                            <div class="py-2 text-uppercase">Price</div>
                                        </th>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="py-2 text-uppercase">Quantity</div>
                                    </th>
                                    <th scope="col" class="border-0 bg-light">
                                        <div class="py-2 text-uppercase">Client</div>
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <th scope="row" class="border-0">
                                            <div class="p-2">
                                                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="Image" width="100" />
                                                <div class="ml-3 d-inline-block align-middle">
                                                    @Html.DisplayFor(modelItem => item.Brand)  @Html.DisplayFor(modelItem => item.Model)
                                                </div>
                                            </div>
                                        </th>
                                        <td class="border-0 align-middle"><strong> @Html.DisplayFor(modelItem => item.Price)</strong></td>
                                        <td class="border-0 align-middle"><strong> @Html.DisplayFor(modelItem => item.ProductCount)</strong></td>
                                        <td class="border-0 align-middle"><strong> Ordered on @Html.DisplayFor(modelItem => item.OrderedOn) from  @Html.DisplayFor(modelItem => item.CustomerUsername)</strong></td>
                                    </tr>

                                </tbody>
                            }
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
<style>
    body {
        background: #a3c4ee;
        background: -webkit-linear-gradient(to right, #1873CC, #A1C5EA);
        background: linear-gradient(to right, #1873CC, #A1C5EA);
        min-height: 100vh;
    }
</style>



